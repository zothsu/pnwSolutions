---
const services = [
  {
    name: "Quick Updates",
    price: 50,
    unit: "/hour",
    description: "Small changes and updates to existing sites",
    features: [
      "Content updates",
      "Plugin/theme updates", 
      "Minor styling tweaks",
      "Basic functionality fixes",
      "Image optimization",
      "Form adjustments"
    ],
    cta: "Get Started",
    popular: true,
    color: "primary",
    platforms: ["Squarespace", "WordPress"]
  },
  {
    name: "Custom Development",
    price: "Contact",
    unit: "for quote",
    description: "New websites and complex integrations",
    features: [
      "Custom website development",
      "E-commerce setup",
      "API integrations",
      "Performance optimization",
      "SEO implementation",
      "Responsive design",
      "Open source solutions"
    ],
    cta: "Get Quote",
    popular: false,
    color: "secondary",
    platforms: ["React", "Astro", "Next.js"]
  },
  {
    name: "Consultation",
    price: 75,
    unit: "/hour",
    description: "Strategic guidance and technical advice",
    features: [
      "Technology recommendations",
      "Performance audits",
      "SEO analysis",
      "Security reviews",
      "Architecture planning",
      "Tool selection guidance"
    ],
    cta: "Book Session",
    popular: false,
    color: "accent",
    platforms: ["All Platforms"]
  }
];
---

<section id="pricing" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-accent-100 dark:bg-accent-900 text-accent-600 dark:text-accent-300 font-medium text-sm mb-4">
        Services & Pricing
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Transparent, Hourly-Based Pricing</h2>
      <p class="text-gray-600 dark:text-gray-300">
        No subscriptions, no hidden fees. Pay only for the work you need. All projects start with a free consultation.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class={`card p-6 border ${service.popular ? `border-${service.color}-500 dark:border-${service.color}-400` : 'border-gray-200 dark:border-gray-700'} slide-up relative`}
          style={`animation-delay: ${index * 150}ms`}
        >
          {service.popular && (
            <div class={`absolute top-0 right-0 bg-${service.color}-500 text-white px-4 py-1 text-sm font-medium rounded-bl-lg rounded-tr-lg`}>
              Most Popular
            </div>
          )}
          
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">{service.name}</h3>
          <div class="mb-2">
            {typeof service.price === 'number' ? (
              <>
                <span class="text-4xl font-bold text-gray-900 dark:text-white">${service.price}</span>
                <span class="text-gray-500 dark:text-gray-400">{service.unit}</span>
              </>
            ) : (
              <>
                <span class="text-3xl font-bold text-gray-900 dark:text-white">{service.price}</span>
                <span class="text-gray-500 dark:text-gray-400"> {service.unit}</span>
              </>
            )}
          </div>
          <div class="mb-4">
            <div class="flex flex-wrap gap-1">
              {service.platforms.map(platform => (
                <span class="inline-block px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded">
                  {platform}
                </span>
              ))}
            </div>
          </div>
          <p class="text-gray-600 dark:text-gray-300 mb-6">{service.description}</p>
          
          <ul class="space-y-3 mb-8">
            {service.features.map(feature => (
              <li class="flex items-start">
                <svg class={`w-5 h-5 text-${service.color}-500 mr-2 shrink-0 mt-0.5`} fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-600 dark:text-gray-300">{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href="/contact" 
            class={`w-full btn ${service.popular ? `bg-${service.color}-600 hover:bg-${service.color}-700 text-white focus:ring-${service.color}-500` : 'btn-outline'}`}
          >
            {service.cta}
          </a>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-2">All services include a free 15-minute consultation to discuss your needs.</p>
      <a href="/contact" class="text-primary-600 dark:text-primary-400 font-medium hover:underline">Contact us to get started</a>
    </div>
  </div>
</section>
