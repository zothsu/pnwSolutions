---
interface Props {
  title: string;
  highlightText?: string;
  description: string;
}

const { title, highlightText, description } = Astro.props;

// Split the title to insert the highlighted text if provided
let titleStart = title;
let titleEnd = "";

if (highlightText) {
  const titleParts = title.split(highlightText);
  if (titleParts.length > 1) {
    titleStart = titleParts[0];
    titleEnd = titleParts[1];
  }
}
---

<!-- Hero Section -->
<section
       class="relative overflow-hidden bg-linear-to-b from-primary-100 to-white dark:from-primary-950 dark:to-secondary-950 pt-24 md:pt-32 pb-14 md:pb-10"
    >
      <div class="absolute inset-0 z-0 opacity-30">
        <div class="absolute inset-0 bg-grid-pattern"></div>
      </div>

  <div class="container-custom relative z-10">
    <div class="text-center max-w-3xl mx-auto px-4">
      <h1
        class="bg-linear-to-b from-primary-100 to-white dark:from-primary-950 dark:to-secondary-950"
      >
        {
          highlightText ? (
            <>
              {titleStart}
              <span class="text-accent-500">{highlightText}</span>
              {titleEnd}
            </>
          ) : (
            title
          )
        }
      </h1>
      <p class="animate-slide-up" style="animation-delay: 200ms">
        {description}
      </p>
    </div>
  </div>

  <!-- Animated Shapes -->
  <div class="absolute left-0 right-0 flex justify-center">
    <div
      class="w-48 md:w-64 h-48 md:h-64 bg-accent-400 rounded-full filter blur-3xl opacity-20 animate-pulse"
    >
    </div>
  </div>
</section>
