---
---
<section class="relative pt-32 pb-20 md:pt-40 overflow-hidden hero-section">
  <div class="container-custom relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="slide-up" transition:animate="slide">
        <h1 class="mb-6 text-secondary-900 dark:text-white leading-tight">
          <span class="text-primary-600 dark:text-primary-400">Modern Web</span> Solutions<br>
          for Small Business.
        </h1>
        <p class="text-xl text-secondary-600 dark:text-secondary-300 mb-8 max-w-lg">
          PNW Digital Solutions leverages proven open source technologies to deliver fast, reliable, and cost-effective web development for your business growth.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/contact" class="btn-primary">
            Free Consultation!
          </a>
          <a href="/blog" class="btn-outline flex items-center">
            Our Blog
          </a>

        </div>
      </div>
      
      <div class="relative fade-in" transition:animate="fade">
        <!-- Animated Crow SVG Hero Image -->
        <div class="w-full max-w-lg mx-auto">
          <svg viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto drop-shadow-xl">
            <!-- Background elements with animations -->
            <circle cx="400" cy="300" r="250" fill="#f8fafc" class="dark:fill-slate-200 animate-pulse" style="animation-duration: 8s;" />
            <circle cx="550" cy="180" r="60" fill="#e2e8f0" class="dark:fill-slate-400 animate-pulse" opacity="0.8" style="animation-duration: 5s;" />
            <circle cx="200" cy="400" r="80" fill="#f1f5f9" class="dark:fill-slate-650 animate-pulse" opacity="0.9" style="animation-duration: 6s;" />
            
            <!-- Decorative elements with animations -->
            <circle cx="400" cy="300" r="220" stroke="#0ea5e9" stroke-width="5" fill="none" class="dark:stroke-accent-500 stroke-accent-600" stroke-dasharray="15,10">
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                from="0 400 300" 
                to="360 400 300" 
                dur="30s" 
                repeatCount="indefinite" 
              />
            </circle>
            
            <!-- Crow body with subtle animation -->
            <ellipse cx="400" cy="320" rx="120" ry="80" fill="#1e293b" class="dark:fill-slate-900">
              <animate 
                attributeName="ry" 
                values="80;83;80" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </ellipse>
            
            <!-- Crow head with subtle animation -->
            <ellipse cx="350" cy="260" rx="70" ry="65" fill="#1e293b" class="dark:fill-slate-900">
              <animate 
                attributeName="ry" 
                values="65;67;65" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </ellipse>
            
            <!-- Crow beak with animation -->
            <path d="M280 260 L240 265 L270 275 Z" fill="#fbbf24" class="dark:fill-yellow-500">
              <animate 
                attributeName="d" 
                values="M280 260 L240 265 L270 275 Z;
                        M280 260 L235 268 L270 278 Z;
                        M280 260 L240 265 L270 275 Z" 
                dur="3s" 
                repeatCount="indefinite" 
              />
            </path>
            
            <!-- Wings with flapping animation -->
            <ellipse cx="420" cy="300" rx="90" ry="45" fill="#334155" class="dark:fill-slate-800" transform="rotate(-15 420 300)">
              <animate 
                attributeName="ry" 
                values="45;55;45" 
                dur="1.5s" 
                repeatCount="indefinite" 
              />
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                values="-15 420 300;-5 420 300;-15 420 300" 
                dur="1.5s" 
                repeatCount="indefinite" 
              />
            </ellipse>
            <ellipse cx="380" cy="310" rx="85" ry="40" fill="#475569" class="dark:fill-slate-700" transform="rotate(15 380 310)">
              <animate 
                attributeName="ry" 
                values="40;50;40" 
                dur="1.5s" 
                repeatCount="indefinite" 
              />
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                values="15 380 310;5 380 310;15 380 310" 
                dur="1.5s" 
                repeatCount="indefinite" 
              />
            </ellipse>
            
            <!-- Eye with blinking animation -->
            <circle cx="330" cy="245" r="12" fill="#fbbf24" class="dark:fill-yellow-400">
              <animate 
                attributeName="r" 
                values="12;2;12" 
                dur="6s" 
                repeatCount="1" 
              />
            </circle>
            <circle cx="335" cy="240" r="4" fill="#1e293b" class="dark:fill-slate-900" />
            <circle cx="337" cy="238" r="2" fill="white" class="dark:fill-slate-200" />
            
            <!-- Tail feathers with swaying animation -->
            <ellipse cx="500" cy="340" rx="60" ry="15" fill="#1e293b" class="dark:fill-slate-900" transform="rotate(-30 500 340)">
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                values="-30 500 340;-25 500 340;-30 500 340" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </ellipse>
            <ellipse cx="520" cy="350" rx="55" ry="12" fill="#334155" class="dark:fill-slate-800" transform="rotate(-25 520 350)">
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                values="-25 520 350;-20 520 350;-25 520 350" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </ellipse>
            
            <!-- Legs with subtle movement -->
            <rect x="370" y="390" width="8" rx="4" ry="4" height="40" fill="#fbbf24" class="dark:fill-yellow-500">
              <animate 
                attributeName="height" 
                values="40;42;40" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </rect>
            <rect x="390" y="390" width="8" rx="4" ry="4" height="40" fill="#fbbf24" class="dark:fill-yellow-500">
              <animate 
                attributeName="height" 
                values="40;42;40" 
                dur="4s" 
                repeatCount="indefinite" 
                begin="0.5s"
              />
            </rect>
            
            <!-- Claws -->
            <path d="M368 430 L365 435 M370 430 L367 435 M372 430 L375 435" stroke="#1e293b" stroke-width="2" class="dark:stroke-slate-900" />
            <path d="M388 430 L385 435 M390 430 L387 435 M392 430 L395 435" stroke="#1e293b" stroke-width="2" class="dark:stroke-slate-900" />
            
            <!-- Animated text -->
            <!-- <text x="480" y="150" font-family="Arial" font-size="28" fill="#0ea5e9" class="dark:fill-teal-400" font-weight="bold">
              PNW Digital Solutions
              <animate 
                attributeName="opacity" 
                values="0.7;1;0.7" 
                dur="3s" 
                repeatCount="indefinite" 
              />
            </text> -->
            
            <!-- Floating code symbols -->
            <text x="250" y="180" font-family="monospace" font-size="16" fill="#0ea5e9" class="dark:fill-teal-400" opacity="0.7">
              &lt;/&gt;
              <animate 
                attributeName="y" 
                values="180;160;180" 
                dur="4s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="opacity" 
                values="0.7;0.3;0.7" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </text>
            <text x="550" y="270" font-family="monospace" font-size="14" fill="#0ea5e9" class="dark:fill-teal-400" opacity="0.5">
              { }
              <animate 
                attributeName="y" 
                values="270;250;270" 
                dur="5s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="opacity" 
                values="0.5;0.2;0.5" 
                dur="5s" 
                repeatCount="indefinite" 
              />
            </text>
            <text x="200" y="420" font-family="monospace" font-size="18" fill="#0ea5e9" class="dark:fill-teal-400" opacity="0.6">
              npm
              <animate 
                attributeName="y" 
                values="420;400;420" 
                dur="6s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="opacity" 
                values="0.6;0.3;0.6" 
                dur="6s" 
                repeatCount="indefinite" 
              />
            </text>
            
            <!-- Flying particles representing code -->
            <circle cx="300" cy="200" r="3" fill="#10b981" class="dark:fill-emerald-400" opacity="0.7">
              <animate 
                attributeName="cx" 
                values="300;320;300" 
                dur="8s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="cy" 
                values="200;180;200" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </circle>
            <circle cx="500" cy="380" r="4" fill="#8b5cf6" class="dark:fill-purple-400" opacity="0.6">
              <animate 
                attributeName="cx" 
                values="500;480;500" 
                dur="6s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="cy" 
                values="380;360;380" 
                dur="5s" 
                repeatCount="indefinite" 
              />
            </circle>
          </svg>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Featured section at the bottom of hero section -->
  <div class="mt-10 w-full overflow-hidden -z-10" transition:animate="slide">
    <div class="relative dark:bg-teal-200 overflow-hidden bg-linear-to-b from-teal-100 to-white dark:from-teal-200 dark:to-teal-100 pt-24 md:pt-32 pb-16 md:pb-20">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <div class="text-3xl md:text-4xl font-bold text-black dark:text-black">
              Open Source <span class="bg-accent-400 px-2 py-1">Powered</span> Web Solutions for Small Business.
            </div>
          </div>
          
          <div class="flex flex-col items-start md:items-end justify-center">
            <p class="text-sm uppercase tracking-wider text-teal-800 dark:text-teal-800 font-medium mb-4">TECHNOLOGIES WE USE</p>
            <div class="flex flex-wrap justify-start md:justify-end gap-x-8 gap-y-4">
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">React</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">Astro</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">Node.js</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">TypeScript</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">Tailwind CSS</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">SASS</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Animated Shapes -->
    <div class="absolute -bottom-16 left-0 right-0 flex justify-center">
      <div class="w-118 md:w-64 h-68 md:h-44 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  /* Add keyframes for additional animations if needed */
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  /* Apply floating animation to the entire SVG container */
  .fade-in svg {
    animation: float 6s ease-in-out infinite;
  }
</style>
